{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/[...route].ts": {
      "runtime": "nodejs18.x",
      "includeFiles": "backend-ts/dist/**"
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "cleanUrls": true
}

